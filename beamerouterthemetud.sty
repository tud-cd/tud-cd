  \setlength{\@tempdima}{\@tempdima*\ratio{#1pt}{0.125pt}}%
  \setlength{\@tempdima}{\@tempdima*\ratio{#1pt}{0.125pt}}%
  \setlength{\tudbeamer@logotopmargin}{#1\paperheight - \@tempdima -
    0.282\tudbeamer@logowidth}%
}

